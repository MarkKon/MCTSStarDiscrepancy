{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build main",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/MT/main.cpp",
                "${workspaceFolder}/MT/point_set.cpp",
                "${workspaceFolder}/MT/faure.cpp",
                "${workspaceFolder}/MT/sobol.cpp",
                "${workspaceFolder}/MT/halton.cpp",
                "-o",
                "${workspaceFolder}/MT/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
